background-linear-gradient(startPoint, startColor, startInterval, endColor, endInterval)
  background-color startColor
  background-image -webkit-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -moz-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -ms-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -o-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image linear-gradient(startPoint, startColor startInterval, endColor endInterval)

.zs-sign
  height 100%
  position relative
  top 25px
  background-image url('/img/hashtag_bg@2x.png')
  background-size contain
  background-repeat no-repeat
  background-position center

.zs-form
  width 80%

  .uk-form-icon
    width 100%
    position relative
    z-index 1
    input
      border-radius 30px
      width 100%
      border 3px solid zs-button-border-color
      font-size 30px
      height 100%
      color zs-input-color
      font-weight 300
      text-transform lowercase
      &:focus
        color zs-input-color-focus

.uk-form-icon:not(.uk-form-icon-flip) > input
  padding-left 40px!important

.uk-form-icon > [class*='uk-icon-']
  top 36%
  left 10px



.zs-button-box
  position fixed
  bottom 0
  left 0
  width 100%
  margin-bottom 20px!important
  margin-top 0!important
  .zs-button
    border-radius 50%
    width 70px
    height 70px
    color zs-button-color
    font-weight 800


.uk-icon-hash
  content url('/img/hash_input.png')
  transform scale(.7)
.uk-icon-at
  content url('/img/at_input.png')
  transform scale(.7)

.popover-content
  padding 3px 15px

ul.list-unstyled
  margin-bottom 0
  li
    color zs-button-color
    font-size 11px


.ui-notification
  width 100%
  text-align center
  background background-linear-gradient(top, #a4bdc7, 15%, #85b1c0, 55%)
  font-weight 200
  &.success
    color: #ffffff;

    background: #89aebb;


.popover
  left 0!important
  width 100%!important
  max-width none
  border none
  border-radius 15px
.popover
  > .arrow
    border-width 6px
.popover.top
  margin-top -6px
.popover.top > .arrow
  left 30%!important
  bottom -6px